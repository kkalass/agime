<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="0px"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/settings_item_margin_horizontal"
        android:layout_marginRight="@dimen/settings_item_margin_horizontal"
        android:paddingLeft="@dimen/settings_item_padding_horizontal"
        android:paddingRight="@dimen/settings_item_padding_horizontal"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:minHeight="48dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/k_preference_item_text_size"
        android:textAppearance="?android:attr/preferenceStyle"
        android:text="One100"
        android:id="@+id/name"
        android:singleLine="true" />
</LinearLayout>