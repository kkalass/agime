<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="0px"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/project_name_row"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginTop="10dip"
                        android:layout_width="100sp"
                        android:textColor="@color/material_black_text_secondary"
                        android:text="@string/project_name_label"
                        android:layout_height="wrap_content"
                        />
                    <EditText
                        android:id="@+id/project_name"
                        android:layout_marginTop="10dip"
                        android:layout_width="fill_parent"
                        android:inputType="textAutoComplete|textCapSentences"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/project_color_row"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_marginTop="10dip"
                        android:layout_width="100sp"

                        android:textColor="@color/material_black_text_secondary"
                        android:text="@string/project_color_label"
                        android:layout_height="wrap_content"
                        />
                    <Spinner
                        android:id="@+id/project_color_spinner"
                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    >
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="fill_parent"
                        android:id="@+id/duration_limited"
                        android:text="@string/project_duration_limited"
                        android:textColor="@color/material_black_text_secondary"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_body_1_material"
                        android:checked="false"

                        />
                </LinearLayout>

                <!--LinearLayout
                    android:id="@+id/active_from_row"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginTop="10dip"
                        android:layout_width="100sp"
                        android:text="@string/active_from_label"
                        android:layout_height="wrap_content"
                        />
                    <EditText
                        android:id="@+id/active_from"
                        android:layout_marginTop="10dip"
                        android:layout_width="fill_parent"
                        android:text="16.10.2014"
                        android:inputType="textAutoComplete|textCapSentences"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout-->
                <LinearLayout
                    android:id="@+id/active_until_row"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_marginTop="10dip"
                        android:layout_width="100sp"
                        android:text="@string/active_until_label"
                        android:textColor="@color/material_black_text_secondary"
                        android:layout_height="wrap_content"
                        />
                    <Button
                        android:id="@+id/active_until"
                        android:layout_marginTop="10dip"
                        android:layout_width="fill_parent"
                        android:text="16.08.2015"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

    </LinearLayout>
</ScrollView>