<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/overview_background"
    android:stateListAnimator="@animator/tracked_item_raise"
    android:paddingLeft="@dimen/overview_level2_card_horizontal_margin"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/overview_level2_card_horizontal_margin"
    android:paddingBottom="0dip"
    >
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:paddingRight="16dip"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
        android:background="@color/overview_background"


        android:layout_margin="0dip"
        android:gravity="center_vertical"
        android:minHeight="42dip"
        android:id="@+id/overview_level2_expanded_header_row"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 6%"
            android:width="@dimen/overview_percentage_column_width"
            android:id="@+id/overview_level2_duration_percentage"
            android:textColor="@color/overview_level2_text"
            android:textStyle="bold"
            android:paddingRight="8dip"
            android:gravity="right" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Software"
            android:id="@+id/overview_level2_name"
            android:textColor="@color/overview_level2_text"
            android:layout_weight="10"
            android:singleLine="true"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/overview_level2_text"
            android:text="1 Std 43 Min"
            android:id="@+id/overview_level2_duration"
            android:gravity="right|center_vertical"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
