https://code.google.com/p/iosched/source/browse/android/src/main/res/layout/dialog_about.xml -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:orientation="vertical">

	<androidx.appcompat.widget.Toolbar
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/action_bar"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:elevation="4dp"
		android:contentInsetEnd="0dp"
		app:contentInsetRight="0dp"
		app:contentInsetEnd="0dp"
		android:contentInsetRight="0dp"
		android:contentInsetLeft="72dp"
		android:contentInsetStart="72dp"
		app:contentInsetLeft="72dp"
		app:contentInsetStart="72dp"
		android:paddingRight="12dp"
		style="@style/AgimeToolbar"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
		android:minHeight="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
	/>

	<!-- The main content view -->
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:textSize="@dimen/text_size_medium_material">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_launcher"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="16dp"
			/>
			<TextView
				android:id="@+id/about_top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:textIsSelectable="true"
				android:gravity="center"
				android:textSize="@dimen/text_size_medium_material"
				android:text=""
			/>
			<ImageView android:src="@drawable/dotted"
				android:layout_marginTop="24dp"
				android:layout_marginBottom="24dp"
				android:layerType="software"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/about_bottom"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				android:layout_gravity="center_horizontal"
				android:textSize="@dimen/text_size_medium_material"
				android:gravity="center"
			/>
			<ImageView android:src="@drawable/dotted"
				android:layout_marginTop="24dp"
				android:layout_marginBottom="24dp"
				android:layerType="software"
				android:visibility="gone"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/about_bottom_credits"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:textIsSelectable="true"
				android:visibility="gone"
				android:textSize="@dimen/text_size_medium_material"
				android:gravity="center"
			/>
			<ImageView android:src="@drawable/dotted"
				android:layout_marginTop="24dp"
				android:layout_marginBottom="24dp"
				android:layerType="software"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/about_bottom_impressum"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				android:layout_gravity="center_horizontal"
				android:textSize="@dimen/text_size_medium_material"
				android:gravity="center"
			/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>