<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/project_color_bar_width"
        android:layout_height="match_parent"

        android:background="@color/category2_default"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:id="@+id/project_color">

    </LinearLayout>
    <TextView
        android:layout_width="0px"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="8dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:minHeight="48dp"
        android:gravity="center_vertical|start"
        android:textSize="@dimen/k_preference_item_text_size"
        android:textAppearance="?android:attr/preferenceStyle"
        android:text="One100"
        android:id="@+id/project_name"
        android:singleLine="true" />
    <TextView
        android:layout_width="0px"
        android:layout_weight="5"
        android:layout_height="wrap_content"

        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:minHeight="48dp"
        android:gravity="center_vertical|end"
        android:textSize="@dimen/k_preference_item_text_size"
        android:textAppearance="?android:attr/preferenceStyle"
        android:text="Date"
        android:id="@+id/project_active_until"
        android:singleLine="true" />

</LinearLayout>