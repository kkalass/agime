<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:id="@+id/activity_type_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

            <LinearLayout
                android:id="@+id/name_row"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="10dip"
                    android:layout_width="100sp"
                    android:textColor="@color/material_black_text_secondary"
                    android:text="@string/custom_field_type_name_label"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/name"
                    android:layout_marginTop="10dip"
                    android:layout_width="0px"
                    android:layout_weight="10"
                    android:hint="@string/custom_field_type_name_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete|textCapWords"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:minHeight="@dimen/settings_section_header_min_height"
            android:gravity="center_vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.SwitchCompat
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/fragment_custom_field_project_specific_label"
                android:textColor="@color/material_black_text_secondary"
                android:textOn="Aktiv"
                android:textOff="Inaktiv"
                android:checked="true"
                android:id="@+id/status_switch"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:id="@+id/project_dependend"
            >
            <com.linearlistview.LinearListView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:showDividers="middle|end"
                android:divider="@drawable/separator"
                android:dividerPadding="2dp"
                app:dividerThickness="1dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</ScrollView>