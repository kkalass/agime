<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/overview_background"
    android:stateListAnimator="@animator/tracked_item_raise"
    android:paddingLeft="@dimen/overview_level2_card_horizontal_margin"
    android:paddingTop="0dp"
    android:paddingRight="@dimen/overview_level2_card_horizontal_margin"
    android:paddingBottom="0dip"

    >

    <LinearLayout
        android:id="@+id/content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/overview_category_card_background"

        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/overview_percentage_column_width"
            android:paddingRight="8dip"
            android:textColor="#999"
            android:id="@+id/overview_level4_duration_percentage"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Ãœbersicht"
            android:id="@+id/overview_level4_details"
            android:layout_weight="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="1 Std 01 Min"
            android:id="@+id/overview_level4_duration"
            android:layout_gravity="right"
            android:textColor="#999"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
