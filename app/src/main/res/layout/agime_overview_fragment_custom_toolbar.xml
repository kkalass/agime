<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subtoolbar"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:theme="@style/AgimeToolbar"
    android:gravity="bottom"
    android:paddingLeft="0dp"
    android:paddingRight="16dp"
    android:elevation="4dp"

    android:layout_height="@dimen/custom_toolbar_height_overview_fragment">
    <LinearLayout
        android:id="@+id/heading"

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center_vertical|start"
        android:layout_height="@dimen/action_bar_default_height_material">

        <TextView
            android:id="@+id/heading_text"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_dark"

            android:textSize="@dimen/text_size_title_material_toolbar"
            android:text="Moinsen"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/heading_text_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_arrow_drop_down_24"
            android:layout_gravity="center_vertical|end"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:minHeight="48dp"

        android:layout_gravity="bottom"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"

        android:layout_height="wrap_content"
        >
        <Spinner
            android:layout_marginTop="0dp"

            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:text="Projekt"

            android:id="@+id/level1_selector"
            >
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:text="Kategorie"

            android:id="@+id/level2_selector"
            >
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="Typ"

            android:layout_gravity="center"
            android:id="@+id/level3_selector"
            >
        </Spinner>
    </LinearLayout>
</LinearLayout>