<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/overview_background"
    android:stateListAnimator="@animator/tracked_item_raise"
    android:paddingLeft="@dimen/overview_level2_card_horizontal_margin"
    android:paddingRight="@dimen/overview_level2_card_horizontal_margin"
    android:paddingTop="0dip"
    android:paddingBottom="0dip"
    >
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="8dip"
        android:paddingRight="16dip"
        android:paddingTop="8dip"
        android:orientation="horizontal"
        android:background="@color/overview_category_card_background"
        android:paddingBottom="2dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 6%"
            android:width="@dimen/overview_percentage_column_width"
            android:id="@+id/overview_level3_duration_percentage"
            android:textStyle="bold"
            android:paddingRight="8dip"
            android:gravity="right" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Programmieren"
            android:id="@+id/overview_level3_name"
            android:textStyle="bold"
            android:layout_weight="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="1 Std 43 Min"
            android:id="@+id/overview_level3_duration"
            android:layout_gravity="right"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
