<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:gravity="center_vertical"

    android:paddingLeft="@dimen/preference_item_padding_side"
    android:paddingRight="@dimen/preference_item_padding_side"
    android:background="@drawable/list_item_selector"
    android:layout_height="wrap_content">

    <TextView
        android:layout_weight="10"
        android:paddingLeft="@dimen/preference_item_padding_side"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="@dimen/preference_item_padding_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/k_preference_item_text_size"
        android:textAppearance="?android:attr/preferenceStyle"
        android:gravity="center_vertical"

        android:id="@android:id/text1"
        android:text="placeholder"
        />
    <ImageButton

        android:id="@+id/edit"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_width="56dp"
        android:layout_height="fill_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:scaleType="fitCenter"
        android:background="@drawable/list_item_selector"
        android:layout_gravity="center"
        />
</LinearLayout>
