<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_category_name"
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:textColor="@color/category_text_input"
        android:textColorHint="@color/category_text_input_hint"
        android:hint="@string/track_activity_category_label"
        android:inputType="textAutoComplete|textCapWords"
        android:layout_height="wrap_content"
        />

</LinearLayout>